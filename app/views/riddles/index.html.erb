<p id="notice"><%= notice %></p>

<h1>Listing Riddles</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @riddles.each do |riddle| %>
      <tr>
        <td><%= link_to 'Show', riddle %></td>
        <td><%= link_to 'Edit', edit_riddle_path(riddle) %></td>
        <td><%= link_to 'Destroy', riddle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Riddle', new_riddle_path %>
